{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./packages",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "types",
    "noImplicitAny": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "packages/*"
  ],
  "exclude": [
    "node_modules",
    "examples"
  ]
}